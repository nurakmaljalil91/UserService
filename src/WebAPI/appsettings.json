{
	"Serilog": {
		"Using": [
			"Serilog.Sinks.Console",
			"Serilog.Sinks.File",
			"Serilog.Enrichers.Environment",
			"Serilog.Enrichers.Process",
			"Serilog.Enrichers.Thread"
		],
		"MinimumLevel": {
			"Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
		},
		"Enrich": [
			"FromLogContext",
			"WithEnvironmentName",
			"WithMachineName",
			"WithProcessId",
			"WithThreadId"
		],
		"WriteTo": [
			{
				"Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} {CorrelationId} {Message:lj}{NewLine}{Exception}"
        }
			},
			{
				"Name": "File",
        "Args": {
          "path": "/logs/log-.txt",
          "rollingInterval": "Day",
          "shared": true,
          "retainedFileCountLimit": 10,
          "outputTemplate": "{Timestamp:O} [{Level:u3}] {EnvironmentName} {SourceContext} {CorrelationId} {Message:lj}{NewLine}{Exception}"
        }
			}
		]
	},
	"AllowedHosts": "*",
  "Jwt": {
    "Issuer": "MyWebApp",
    "Audience": "MyWebApp",
    "Key": "change-this-dev-secret-to-a-long-random-key",
    "ExpiryMinutes": 60,
    "RefreshTokenExpiryDays": 30
  },
  "ExternalLink": {
    "StateSigningKey": "change-this-state-signing-key",
    "StateExpiryMinutes": 15
  },
  "ExternalOAuth": {
    "Google": {
      "ClientId": "",
      "ClientSecret": "",
      "RedirectUri": "",
      "AuthorizationEndpoint": "https://accounts.google.com/o/oauth2/v2/auth",
      "TokenEndpoint": "https://oauth2.googleapis.com/token",
      "UserInfoEndpoint": "https://openidconnect.googleapis.com/v1/userinfo",
      "Scopes": [
        "https://www.googleapis.com/auth/calendar",
        "openid",
        "email"
      ]
    }
  }
}
